terraform {
  backend "s3" {}
}

# ---------------------------------------------------------------------------------------------------------------------
# PREPARE PROVIDERS
# ---------------------------------------------------------------------------------------------------------------------
provider "aws" {
  version = "~> 3.0"
  region  = var.region
}

# ---------------------------------------------------------------------------------------------------------------------
# CREATE S3 BUCKET
# ---------------------------------------------------------------------------------------------------------------------
resource "aws_s3_bucket" "test-bucket" {
  bucket = var.bucket
  acl    = var.acl

  tags = var.tags
}
